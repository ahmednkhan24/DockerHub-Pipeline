{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Basic Crud API",
    "description": "Node API to DockerHub"
  },
  "host": "localhost:5000",
  "basePath": "/",
  "tags": [
    {
      "name": "Root",
      "description": "Root Route"
    },
    {
      "name": "Data",
      "description": "API to Create, Read, Update, and Destroy Data"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/": {
      "get": {
        "tags": [
          "Root"
        ],
        "summary": "Get a success message",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/data": {
      "get": {
        "tags": [
          "Data"
        ],
        "summary": "Get all data in the system",
        "responses": {
          "200": {
            "description": "Array of all data in the system"
          }
        }
      },
      "post": {
        "tags": [
          "Data"
        ],
        "summary": "Add a piece of data into the system",
        "parameters": [
          {
            "name": "payload",
            "in": "body",
            "description": "Data to save",
            "example": {
              "payload": 5
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Data successfully inserted into the system"
          },
          "400": {
            "description": "Request body is either empty or does not have a payload property"
          }
        }
      }
    }
  }
}
